{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": ["cypress", "node", "cypress-localstorage-commands"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["**/*.ts"],
    "references": [{ "path": "./tsconfig.node.json"}]
}